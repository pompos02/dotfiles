set -g @theme_black '#000000'
set -g @theme_light_gray '#dbdbdb'
set -g @theme_dark_gray '#1a1a1a'
set -g @theme_medium_gray '#3a3a3a'
set -g @theme_border_gray '#2a2a2a'

# Minimal tmux configuration variables
set -g @minimal-tmux-bg '#{@theme_light_gray}'
set -g @minimal-tmux-fg '#{@theme_black}'
set -g @minimal-tmux-status 'bottom'
set -g @minimal-tmux-justify 'centre'
set -g @minimal-tmux-indicator true
set -g @minimal-tmux-indicator-str ' tmux '
set -g @minimal-tmux-use-arrow true
set -g @minimal-tmux-right-arrow ''
set -g @minimal-tmux-left-arrow ''
set -g @minimal-tmux-expanded-icon 'ó°Š“ '
set -g @minimal-tmux-show-expanded-icons-for-all-tabs false

# Status bar styling
set -g status-position bottom
set -g status-style bg=default,fg=default
set -g status-justify absolute-centre
set -g status-left-length 100
set -g status-right-length 100

# Status left - Session name with prefix indicator
# When prefix NOT pressed: shows session name in light gray
# When prefix IS pressed: shows session name with light gray background and black text
set -g status-left "#[bg=default,fg=default,bold]#{?client_prefix,,#[fg=#{@theme_light_gray}] #S }#[bg=#{@theme_light_gray},fg=#{@theme_black},bold]#{?client_prefix, #S ,}#[bg=default,fg=default,bold]"

# Status right - Current directory (truncate $HOME to ~)
set -g status-right "#[fg=#{@theme_light_gray}]#{s|$HOME|~|:pane_current_path}"

# Window status styling
set -g window-status-separator ""

# Inactive window format - light gray text
setw -g window-status-format " #[fg=#{@theme_light_gray}]#I:#W "

# Active window format with arrows - light gray background with black text
setw -g window-status-current-format "#[fg=#{@theme_light_gray}]#[bg=#{@theme_light_gray},fg=#{@theme_black},bold] #I:#W #{?window_zoomed_flag,#{@minimal-tmux-expanded-icon},}#[fg=#{@theme_light_gray},bg=default]"

# Window activity monitoring
setw -g monitor-activity on
set -g window-status-activity-style "fg=default,bg=default"

# Pane border styling
setw -g pane-border-status off
setw -g pane-border-format ""
setw -g pane-active-border-style "bg=default,fg=#{@theme_light_gray}"
setw -g pane-border-style "bg=default,fg=#{@theme_border_gray}"
setw -g pane-border-lines single

# Message/command line styling
set -g message-style "fg=#{@theme_light_gray},bg=#{@theme_dark_gray}"
set -g message-command-style "fg=#{@theme_light_gray},bg=#{@theme_dark_gray}"
setw -g mode-style "fg=#{@theme_black},bg=#{@theme_light_gray}"
