{
  "name": "personal-snippets",
  "contributes": {
    "snippets": [
      {
        "language": "elixir",
        "path": "./elixir.json"
      }
    ],
    "keybindings": [
      {
        "command": "editor.action.insertSnippet",
        "key": "ctrl+h",
        "when": "editorTextFocus && editorLangId == elixir",
        "args": {
          "snippet": "~H\"\"\"\n$1\n\"\"\""
        }
      }
    ]
  }
}
